<PageTitle>OrcaHello-@Title</PageTitle>

<RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-1" Style="vertical-align:top;">
    @Title
    @if (!string.IsNullOrWhiteSpace(BadgeValue))
    {
        <RadzenBadge BadgeStyle="BadgeStyle.Success" Text=@BadgeValue class="rz-ml-2" />
    }
</RadzenText>
@if (!string.IsNullOrWhiteSpace(Description))
{
    <RadzenText TextStyle="TextStyle.Body1" class="rz-mb-4" Text=@Description />
}
